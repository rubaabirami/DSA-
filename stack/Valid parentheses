Tc=O(n)
Sc=O(n)

#include <iostream>
#include <stack>
using namespace std;

class Solution {
public:
    bool isvalid(string str) {
        stack<char> st;
        for (int i = 0; i < str.size(); i++) {
            if (str[i] == '(' || str[i] == '{' || str[i] == '[') {
                st.push(str[i]);
            }
            else {
                if (st.size() == 0) {
                    return false;
                }
                if ((st.top() == '(' && str[i] == ')') ||
                    (st.top() == '{' && str[i] == '}') ||
                    (st.top() == '[' && str[i] == ']')) {
                    st.pop();
                }
                else {
                    return false;
                }
            }
        }
        return st.size() == 0;
    }
};
int main() {
    Solution s;
    string input;
    cout << "Enter parentheses string: ";
    cin >> input;

    if (s.isvalid(input)) {
        cout << "Valid parentheses." << endl;
    } else {
        cout << "Invalid parentheses." << endl;
    }

    return 0;
}
