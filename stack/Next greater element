TC=O(n)
SC=O(n)
#include <iostream>
#include <vector>
#include <stack>
using namespace std;

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> arr(n);
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    stack<int> s;
    vector<int> ans(n, 0);

    for (int i = n - 1; i >= 0; i--) {
        while (!s.empty() && s.top() <= arr[i]) {
            s.pop();
        }
        if (s.empty()) {
            ans[i] = -1;
        } else {
            ans[i] = s.top();
        }
        s.push(arr[i]);
    }

    cout << "Next Greater Elements:\n";
    for (int val : ans) {
        cout << val << " ";
    }
    cout << endl;

    return 0;
}

Output
Enter number of elements: 5
Enter 5 elements:
6
8
0
1
3
Next Greater Elements:
8 -1 1 3 -1 
