#include <iostream>
#include <climits>
#include<algorithm>
using namespace std;

// Time Complexity: O(n)
// Space Complexity: O(1)
int main() {
    int n;
    cout<<"Enter number of array size=";
    cin>>n;
    
    int arr[n];
    cout << "Enter " << n << " elements:\n";
    for(int i=0;i<n;i++)
    cin>>arr[i];
    int smallest=INT_MAX;
    int largest=INT_MIN;
    int smallestIndex = -1, largestIndex = -1;
     for (int i = 0; i < n; i++) {
        if (arr[i] < smallest) {
            smallest = arr[i];
            smallestIndex = i;
        }
        if (arr[i] > largest) {
            largest = arr[i];
            largestIndex = i;
        }
    }
    cout<<"Smallest num is="<<smallest<<endl;
     cout<<"largest num is="<<largest<<endl;
    swap(arr[smallestIndex],arr[largestIndex]);
    cout << "Array after swapping smallest and largest elements:\n";

    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
  cout<<endl;
    return 0;
}
