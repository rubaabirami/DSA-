//Time complexity=O(n)
//Space complexity=O(1)
#include<iostream>
#include<climits>
using namespace std;
int bestBuy(int price[],int n){
    int bestBuy=price[0];
    int maxProfit=0;
    for(int i=1;i<n;i++){
        if(price[i]>bestBuy){
            maxProfit=max(maxProfit,price[i]-bestBuy);
        }
        bestBuy=min(bestBuy,price[i]);
    }
    return maxProfit;
}
int main(){
    int n;
    
    cout << "Enter the size of arr = ";
    cin >> n;
    
    int price[n];
    cout << "Enter the price: ";
    for(int i = 0; i < n; i++){
        cin >> price[i];
    }
   cout<<"max profit="<<bestBuy(price,n)<<endl;
   
    return 0;
}
