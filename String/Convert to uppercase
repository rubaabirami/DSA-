#include <iostream>
#include <string>
#include <cctype>    // for toupper()
using namespace std;

int main() {
    string s;
    cout << "Enter a string: ";
    getline(cin, s);   // take input including spaces

    // convert each character to uppercase
    for (int i = 0; i < s.length(); i++) {
        s[i] = toupper(s[i]);   // convert character to uppercase
    }

    cout << "Uppercase string: " << s << endl;
    return 0;
}
